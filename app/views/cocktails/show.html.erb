<h1><%= @cocktail.name %></h1>
<div class="container-show">
  <img class="cocktail-pic" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=60" alt="">
  <h2>This drink consists of</h2>
    <%@cocktail.doses.each do |dose| %>
    <div class="item-row">
      <p id="dose-descr"><%= dose.description%></p>
      <p id="dose-descr"><%= dose.ingredient.name %></p>
      <%=link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
      <%end%>
    </div>
    <% end %>
    <div class="item-row">
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
      <button class="btn btn-ghost">Add something else</button>
    </div>
  <% end %>
</div>
